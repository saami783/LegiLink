{% extends 'components/user/sidenav.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        {% if notifications|length == 0 %}
            <p class="message no-reservation">Vous n'avez aucune notification pour le moment.</p>
        {% else %}
            {% for notification in notifications %}
                <p>
                    {{ notification.message|slice(0, 50) ~ '...' }}
                    le {{ notification.createdAt|date("d/m/Y Ã  H:i:s") }}
                    {% if notification.isNew %}
                        <span
                                class="inline-block whitespace-nowrap rounded-[0.27rem] bg-primary-100 px-[0.65em] pb-[0.25em] pt-[0.35em] text-center align-baseline text-[0.75em] font-bold leading-none text-primary-700 dark:bg-slate-900 dark:text-primary-500"
                        >Nouveau</span>
                    {% endif %}
                    <a href="{{ path('app_user_detail_notification', {'user': app.user.id, 'notification': notification.id}) }}">
                        Lire la suite >
                    </a>
                </p>
            {% endfor %}

        {% endif %}

    </div>
{% endblock %}
