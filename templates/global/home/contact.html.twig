{% extends 'layouts/guest_base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

  <div class="container page-content">
    <div class="row">
      <div class="col-md-12 col-lg-4 mx-lg-auto text-lg-center">

        <h1 class="mb-lg-5">Contactez-nous</h1>

        <form action="/submit-form" method="POST">
          <div id="email">
            <input type="email" name="email" placeholder="Email" class="form-control" required>
          </div>
          <div>
            <textarea name="message" placeholder="Votre message ici..." class="form-control" rows="5" required></textarea>
          </div>
          <div>
            <button type="submit" class="btn btn-secondary" style="width:100%;">Envoyer</button>
          </div>
        </form>

      </div>
    </div>
  </div>

{% endblock %}

